---
import { siteConfig } from "../config";
const hasPublications = siteConfig.publications && siteConfig.publications.length > 0;
---

{
  hasPublications && (
    <section id="publications" class="p-8 sm:p-12 md:p-16 lg:p-24 bg-white border-t border-gray-100">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          {/* Left Side: Header with Accent Bar */}
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
              Publications
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          {/* Right Side: Publication Cards */}
          <div class="lg:col-span-8">
            <div class="space-y-8">
              {siteConfig.publications.map((pub, index) => {
                const Component = pub.link ? "a" : "div";
                const linkProps = pub.link
                  ? {
                      href: pub.link,
                      target: "_blank",
                      rel: "noopener noreferrer",
                    }
                  : {};

                return (
                  <div class="group relative">
                    <Component
                      {...linkProps}
                      class={`block relative p-4 sm:p-6 md:p-8 bg-gray-50 rounded-xl sm:rounded-2xl border border-gray-200 transition-all duration-300 ${
                        pub.link
                          ? "hover:bg-white hover:shadow-xl hover:border-gray-300 hover:-translate-y-1"
                          : ""
                      }`}
                    >

                      <div class="space-y-4">
                        <div>
                          <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mt-1">
                            {pub.title}
                          </h3>
                          <p class="text-sm font-semibold mt-1" style={{ color: siteConfig.accentColor }}>
                            {pub.publisher} â€¢ {pub.year}
                          </p>
                        </div>

                        <p
                          class={`text-base sm:text-lg text-gray-600 leading-relaxed ${pub.link ? "pr-12 sm:pr-14 md:pr-16" : ""}`}
                        >
                          {pub.description}
                        </p>

                        {/* Research Tags (e.g., Machine Learning, IoT) */}
                        {pub.tags && pub.tags.length > 0 && (
                          <div class="flex flex-wrap gap-1.5 sm:gap-2 pt-2">
                            {pub.tags.map((tag) => (
                              <span
                                class={`px-2.5 sm:px-3 py-1 sm:py-1.5 bg-gray-900 text-white rounded-md sm:rounded-lg text-xs sm:text-sm font-medium transition-all duration-300 ${
                                  pub.link ? "group-hover:bg-gray-800" : ""
                                }`}
                              >
                                {tag}
                              </span>
                            ))}
                          </div>
                        )}
                      </div>
                    </Component>
                  </div>
                );
              })}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}